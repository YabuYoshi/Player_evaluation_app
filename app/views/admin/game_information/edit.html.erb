      <tr><td></td></tr>
      <tr><td></td></tr>
      <tr><td></td></tr>
      <tr><td></td></tr>

      <tr>
        <td>
          <label for="inputName">後攻球団名</label>
          <%= f.select :second_team_id, options_from_collection_for_select(Team.all, :id, :name) %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="inputName">得点</label>
          <%= f.select :second_team_point, *[1..99], autofocus: true, id:"inputName", placeholder:"得点" %>
        </td>
      </tr>

      <tr><td></td></tr>
      <tr><td></td></tr>
