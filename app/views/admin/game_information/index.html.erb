          </div>
        <% else %>
          <dev class="">
            <%= @teams.name %>
          </div>
        <% end %>
      </td>
      <td>
        <% if game_information.first_second == true %>
          <dev class="">
            <%= game_information.point %>
          </div>
        <% else %>
          <dev class="">
            <%= game_information.point %>
          </div>
        <% end %>
