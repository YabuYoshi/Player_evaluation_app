<table>
  <h2>マイページ <%= link_to "編集", edit_user_path, class:"btn btn-success" %></h2>
    <p>フォロー数:
        <%= link_to user_followings_path(@user) do %>
        <%= @user.followings.count %>
        <% end %>
    </p>
    <p>フォロワー数:
        <%= link_to user_followers_path(@user) do %>
         <%= @user.followers.count %>
        <% end %>
    </p>
  <thead>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
  </thead>
  <tbody>
  　<tr>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>

<br />
<br />

<table>
  <h2>レビュー一覧</h2>
  <thead>
      <th>投稿日時</th>
      <th>評価球団</th>
      <th>試合日時</th>
      <th>コメント件数</th>
      <th></th>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= review.team.name %></td>
      <td><%= review.game_information.game_day %></td>
      <td><%= "#{review.comments.count} コメント" %></td>
      <td><%= link_to 'レビュー詳細', review_path(review), class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
