<h2><%= @user.name %>さんのレビュー一覧</h2>
<table>
  <thead>
      <th>ユーザー名</th>
      <th>投稿日時</th>
      <th>評価球団</th>
      <th>試合日時</th>
      <th>コメント件数</th>
      <th></th>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td>
        <%= link_to admin_user_path(@user.id) do %>
        <%= review.user.name %>
        <% end %>
      </td>
      <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= review.team.name %></td>
      <td><%= review.game_information.game_day %></td>
      <td><%= review.comments.count %></td>
      <td><%= link_to 'レビュー詳細', review_path(review), class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reviews %>