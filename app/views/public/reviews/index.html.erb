<h2><%= @user.name %>さんのレビュー一覧</h2>
  <% if current_user.following?(@user) %>
    <%= link_to "★フォロー中", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "☆フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
<table>
  <thead>
      <th>投稿日時</th>
      <th>評価球団</th>
      <th>試合日時</th>
      <th>コメント件数</th>
      <th></th>
      <th></th>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= review.team.name %></td>
      <td><%= review.game_information.game_day %></td>
      <td><%= "#{review.comments.count} コメント" %></td>
      <td><%= link_to 'レビュー詳細', review_path(review), class:"btn btn-success" %></td>
      <td>
        <% if review.user == current_user %>
          <%= link_to "レビュー削除", review_path(review), method: :delete, class:"btn btn-danger" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
